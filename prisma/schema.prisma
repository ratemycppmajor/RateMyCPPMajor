generator client {
  provider = "prisma-client"
  output = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
}

model College {
  id          String        @id @default(cuid())
  name        String         @unique
  departments Department[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model Department {
  id          String     @id @default(cuid())
  name        String
  collegeId   String
  college     College    @relation(fields: [collegeId], references: [id], onDelete: Cascade)
  majors      Major[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
 
  @@unique([name, collegeId]) 
}
 
model Major {
  id           String     @id @default(cuid())
  name         String
  imgSrc       String?
  url          String?
  description  String?
  departmentId String
  averageGpa   Float?
  slug         String     @unique
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  reviews      Review[]

  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  
  @@unique([name, departmentId])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  careerReadiness  Int      @db.SmallInt
  difficulty       Int      @db.SmallInt
  satisfaction     Int      @db.SmallInt
  createdAt DateTime @default(now())
  userId    String
  majorId   String
 
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  major Major @relation(fields: [majorId], references: [id], onDelete: Cascade)
  likes ReviewLike[]

  @@unique([userId, majorId])
  @@map("reviews")
}

model ReviewLike {
  id        String @id @default(cuid())
  userId    String
  reviewId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@unique([userId, reviewId])
  @@map("review_likes")
}

model User {
  id                String    @id @default(cuid())
  name              String?
  email             String?   @unique
  emailVerified     DateTime? @map("email_verified")
  studentVerified   Boolean   @default(false) @map("student_verified")
  cppEmail          String?   @map("cpp_email")
  cppEmailVerified  DateTime? @map("cpp_email_verified")
  image             String?
  password          String?
  accounts          Account[]
  reviews           Review[]
  likedReviews      ReviewLike[]

  @@map("users")
}


// OAuth for GitHub and Google
model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime
  userId  String?  @map("user_id")
  purpose String?  // 'primary_email' = change primary email, 'cpp_email' = add CPP student email, null = signup

  @@unique([email, token])
}

model PasswordResetToken {
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime

  @@unique([email, token])
}


